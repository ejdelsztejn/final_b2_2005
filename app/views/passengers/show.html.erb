<h1>Passenger: <%= @passenger.name %></h1>
<br>
<h4>List of Passenger's Flights</h4>
<% @passenger.flights.each do |flight| %>
  <p><%= link_to "#{flight.number}", "/flights/#{flight.id}" %></p>
<% end %>
<br>
<h2>Add a New Flight</h2>
<%= form_tag "/passengers/#{@passenger.id}", method: :patch do %>
  <%= label_tag :flight_number %><br/>
  <%= text_field_tag :flight_number %><br/>
  <br>
  <%= submit_tag "Submit" %>
<% end %>
